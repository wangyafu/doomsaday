# =========================================================
# 通用 OpenAI 配置 (默认配置)
# 如果特定角色未配置，将回退使用此配置
# =========================================================
OPENAI_API_KEY=your_generic_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# =========================================================
# 角色专用配置 (可选)
# 可以为不同的功能模块配置不同的模型或 API Key
# =========================================================

# 1. 叙事者 (Narrator): 负责生成每日剧情
# NARRATOR_API_KEY=
# NARRATOR_BASE_URL=
# NARRATOR_MODEL=gpt-4o-mini

# 2. 裁判 (Judge): 负责判定玩家行动结果
# JUDGE_API_KEY=
# JUDGE_BASE_URL=
# JUDGE_MODEL=gpt-4o-mini

# 3. 结局评论员 (Ending): 负责生成结局评语和总结
# ENDING_API_KEY=
# ENDING_BASE_URL=
# ENDING_MODEL=gpt-4o-mini

# 4. 内容审核 (Moderator): 负责审核玩家输入
# MODERATOR_API_KEY=
# MODERATOR_BASE_URL=
# MODERATOR_MODEL=gpt-4o-mini

# =========================================================
# 应用基础配置
# =========================================================
# 是否开启调试模式
DEBUG=True
# 运行环境: development / production
ENVIRONMENT=development

# =========================================================
# 流量控制配置
# =========================================================
# 最大同时在线的公共用户数
MAX_PUBLIC_USERS=10
# 会话超时时间 (秒)
SESSION_TIMEOUT_SECONDS=600